=======================
finally

using System;


class HelloWorld {

  static void Main() {
      int a=10;
      int b=Convert.ToInt32(Console.ReadLine());
      int c=0;   // yeh initialze karna jaruri hai
      try{
        c=a/b;  
      }
      catch(Exception e){
          Console.WriteLine(e);
      }
     finally{
      Console.WriteLine("always execute");
  
      Console.WriteLine(c);
  }
}

