throw and user defined 

using System;

class notvalidage : Exception{
    
    public notvalidage(string s) : base(s){
        
    }
}

class HelloWorld {

  static void checkage(int i){
      if(i<18){
          throw new notvalidage("age is invalid");
      }
  }

  static void Main() {
     
      try{
        checkage(16);  
      }
      catch(Exception e){
          Console.WriteLine(e);
      }
     
  }
}
